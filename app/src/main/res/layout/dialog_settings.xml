<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/shape_dialog_r5"
    android:backgroundTint="@color/white"
    android:paddingHorizontal="@dimen/spacing_42"
    android:paddingVertical="@dimen/spacing_16">

    <TextView
        android:id="@+id/tvtBaseUrl"
        style="@style/TextNormal.Medium"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Base URL"
        app:layout_constraintTop_toTopOf="parent" />

    <EditText
        android:id="@+id/etBaseUrl"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Enter base url"
        app:layout_constraintTop_toBottomOf="@id/tvtBaseUrl" />

    <TextView
        android:id="@+id/tvPlantCategory"
        style="@style/TextNormal.Medium"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/spacing_8"
        android:text="Plant Category"
        app:layout_constraintTop_toBottomOf="@id/etBaseUrl" />

    <Spinner
        android:id="@+id/spCategory"
        style="@style/TextMedium"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@id/tvPlantCategory" />

    <Button
        android:id="@+id/btnSave"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/spacing_8"
        android:text="@string/save"
        app:layout_constraintEnd_toEndOf="@id/spCategory"
        app:layout_constraintTop_toBottomOf="@id/spCategory" />
</androidx.constraintlayout.widget.ConstraintLayout>