<resources>
    <!-- Base application theme. -->
    <style name="Theme.PlantDisease" parent="Theme.MaterialComponents.DayNight.DarkActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/green_500</item>
        <item name="colorPrimaryVariant">@color/green_700</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/yellow_200</item>
        <item name="colorSecondaryVariant">@color/yellow_700</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor">?attr/colorPrimaryVariant</item>
        <!-- Customize your theme here. -->
        <item name="theme">@style/TextNormal</item>
    </style>

    <!--
                 FONT STYLE

        Font Size : - Caption = 12sp
                     - Normal = 14sp
                     - Medium = 16sp
                     - Large = 20sp
                     - Extra Large = 32sp
        Font Weight : - "None" -> Regular
                      - Medium
                      - SemiBold
                      - Bold
        Color : - "None" -> Black
                - White
                - BlackA50
     -->
    <!-- Caption -->
    <style name="TextCaption">
        <item name="android:textSize">@dimen/font_12</item>
        <item name="android:fontFamily">@font/inter_regular</item>
        <item name="android:textColor">@color/black</item>
    </style>

    <style name="TextCaption.BlackA50">
        <item name="android:textColor">@color/black_a50</item>
    </style>

    <style name="TextCaption.White">
        <item name="android:textColor">@color/white</item>
    </style>

    <style name="TextCaption.SemiBold">
        <item name="android:fontFamily">@font/inter_semibold</item>
    </style>

    <style name="TextCaption.SemiBold.BlackA50">
        <item name="android:textColor">@color/black_a50</item>
    </style>

    <style name="TextCaption.SemiBold.White">
        <item name="android:textColor">@color/white</item>
    </style>


    <!-- Normal -->
    <style name="TextNormal">
        <item name="android:textSize">@dimen/font_14</item>
        <item name="android:fontFamily">@font/inter_regular</item>
        <item name="android:textColor">@color/black</item>
    </style>

    <style name="TextNormal.White">
        <item name="android:textColor">@color/white</item>
    </style>

    <style name="TextNormal.Medium">
        <item name="android:fontFamily">@font/inter_medium</item>
    </style>

    <style name="TextNormal.Medium.White">
        <item name="android:textColor">@color/white</item>
    </style>


    <!-- Medium -->
    <style name="TextMedium">
        <item name="android:textSize">@dimen/font_16</item>
        <item name="android:fontFamily">@font/inter_regular</item>
        <item name="android:textColor">@color/black</item>
    </style>

    <style name="TextMedium.Bold">
        <item name="android:fontFamily">@font/inter_bold</item>
    </style>


    <!-- Large -->
    <style name="TextLarge">
        <item name="android:textSize">@dimen/font_20</item>
        <item name="android:fontFamily">@font/inter_regular</item>
        <item name="android:textColor">@color/black</item>
    </style>

    <style name="TextLarge.White">
        <item name="android:textColor">@color/white</item>
    </style>

    <style name="TextLarge.SemiBold">
        <item name="android:fontFamily">@font/inter_semibold</item>
    </style>

    <style name="TextLarge.SemiBold.White">
        <item name="android:textColor">@color/white</item>
    </style>

    <!-- Extra Large -->
    <style name="TextExtraLarge">
        <item name="android:textSize">@dimen/font_32</item>
        <item name="android:fontFamily">@font/inter_regular</item>
        <item name="android:textColor">@color/black</item>
    </style>

    <style name="TextExtraLarge.White">
        <item name="android:textColor">@color/white</item>
    </style>

    <style name="TextExtraLarge.SemiBold">
        <item name="android:fontFamily">@font/inter_semibold</item>
    </style>

    <style name="TextExtraLarge.SemiBold.White">
        <item name="android:textColor">@color/white</item>
    </style>
</resources>